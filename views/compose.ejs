<%- include("partials/header"); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="mb-3">
        <label><b>Title</b></label>
        <input type="text" class="form-control" name="postTitle" autocomplete="off">
    </div>
    <div class="mb-3">
        <label><b>Post</b></label>
        <br>
        <textarea name="postBody" rows="5" cols="173" class="form-label"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>

<%- include("partials/footer"); -%>